<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label>Landmark Name</label><br>
  <input type="text" name="name" id="landmark_name" value="<%= @landmark.name %>"><br>

  <label>Year Completed</label><br>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed" value="<%= @landmark.year_completed %>"><br>

  <input type="submit">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
